.contents
  = render 'shared/flash'
  = render 'shared/left_contents'
  .right-margin
    .right-content
      .right-header
        .right-header__group-info
          .right-header__group-info__name #{@group.name}
          .right-header__group-info__members
            Members:
            -@group.users.each do |member|
              = member.name
        = link_to 'Edit', edit_group_path(@group), class: 'right-header__edit-button'
      .right-main{class: !flash.empty? && "flash"}
        %ul.message-list
          = render partial: 'message', collection: @messages
      = render 'right-footer'
